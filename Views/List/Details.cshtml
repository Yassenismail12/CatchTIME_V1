@model TESTT.Models.List

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <!-- Left side (lists) is empty in this example -->
        </div>

        <div class="col-md-6">
            <h2>List Details</h2>

            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">@Html.DisplayFor(model => model.ListTitle)</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-3">Category:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.ListCategory)</dd>
                    </dl>

                    <h4>Tasks</h4>
                    <hr />
                    <ul class="list-group">
                        @foreach (var task in Model.Tasks)
                        {
                            <li class="list-group-item">@task.TaskTitle</li>
                        }
                    </ul>

                    <a asp-action="Index" class="btn btn-primary mt-3">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>

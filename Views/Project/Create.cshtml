@model TESTT.Models.Project

<h1>Create Project</h1>

<form asp-action="Create" class="mt-3">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <div class="form-group mb-3">
        <label asp-for="ProjectTitle" class="control-label"></label>
        <input asp-for="ProjectTitle" class="form-control" placeholder="Enter project title" />
        <span asp-validation-for="ProjectTitle" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="ProjectNoOfTasks" class="control-label"></label>
        <input asp-for="ProjectNoOfTasks" class="form-control" placeholder="Enter number of tasks" />
        <span asp-validation-for="ProjectNoOfTasks" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="ListId" class="control-label"></label>
        @if (ViewBag.Lists != null)
        {
            <select asp-for="ListId" asp-items="@(ViewBag.Lists)" class="form-control">
                <option value="">Select List</option>
            </select>
        }
        else
        {
            <span>No lists available</span>
        }
        <span asp-validation-for="ListId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary ml-2">Back to Projects</a>
    </div>
</form>

@model IEnumerable<TESTT.Models.Project>

<h1>Project Index</h1>

<p>
    <a asp-action="Create">Create New Project</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                Project Title
            </th>
            <th>
                Completion Percentage
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var project in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => project.ProjectTitle)
                </td>
                <td id="completionPercentage_@project.ProjectId">
                    @Html.DisplayFor(modelItem => project.CompletionPercentage) %
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@project.ProjectId">Details</a> |
                    <a asp-action="Edit" asp-route-id="@project.ProjectId">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@project.ProjectId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
